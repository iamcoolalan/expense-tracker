<div class="container" id="home">
  <div class="row">
    <div class="col-md-8">
      <form action="/filter" method="POST" id="homeSort">
        <div class="form-group">
          <select name="category" id="category" class="mx-auto">
            <option disabled selected>類別</option>
            {{#each categories}}
            <option {{#if (eq ../categoryName this.name)}} selected {{/if}} value={{ this.name }}>{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row mt-4">
    <div class="col-md-8 d-flex justify-content-between">
      <h3 class="me-5">總金額: </h3>
      <p id="total-amount">{{ totalAmount }}</p>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row mt-2" id="record">
    <div class="col-8">
      <ul class="list-group">
        {{#each records}}
        <li class="list-group-item list-group-item-{{ this.style }}">
        <div class="row">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <i class="fa-solid {{ this.icon }} fa-2xl me-3"></i>
              <div style="vertical-align: middle;">
                <h3 class="mb-0">{{ this.name }}</h3>
                <p class="mb-0">{{ this.date }}</p>
              </div>
            </div>
            <div>
              <p class="mb-0">{{ this.amount }}</p>
            </div>
          </div>
        </div>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col-4 d-flex flex-column">
      <ul class="list-group" id="record-function">
        {{#each records}}
        <li class="list-group-item list-group-item-light d-flex align-items-center">
          <a href="/record/{{ this._id }}/edit" class="me-2">修改</a>
          <form action="/record/{{ this._id }}?_method=DELETE" method="post">
            <button type="submit" class="delete">刪除</button>
          </form>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <a href="/record/new" class="btn btn-warning mt-5 mx-auto" id="new-btn">新增支出</a>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>

<script>
  const categorySelect = document.querySelector('#category')
  const homeSort = document.querySelector('#homeSort')

  categorySelect.addEventListener('change', event => {
    
    homeSort.submit()

  })
</script>